{
	"compileOnSave": false,
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "es2015",
		"moduleResolution": "node",
		"declaration": false,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"importHelpers": true,
		"target": "es5",
		"baseUrl": "src",
		"paths": {
			"@app/*": [
				"app/*"
			]
		},
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		]
	}
}